#!/usr/bin/env bash
#
#
set -u -e -o pipefail

case "$*" in
  "-h"|"--help"|"help")
    echo "$0 -h|--help|help -- Show this message."
    echo "$0 build"
    echo
    ;;
  "build")
    cd "$(dirname "$0")"/..
    echo "--- in $PWD" >&2
    set -x
    rm -rf build
    mkdir build
    cp -r Public build/
    cd build
    bun build Public/section/root/index.ts --outdir Public/section/root/
    www write file manifest for Public
    bunx lightningcss --minify --bundle Public/section/root/index.css -o Public/section/root/main.css
    ;;
  *)
    echo "!!! Unknown command: $*" >&2
    exit 1
    ;;
esac
